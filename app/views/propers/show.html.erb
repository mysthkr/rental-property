<h2>閲覧</h2>

<ul>
  <li><b>物件名:</b> <%= @proper.proper_name %></li>
  <li><b>賃料:</b> <%= @proper.rent %>円</li>
  <li><b>住所:</b> <%= @proper.address %></li>
  <li><b>築年数</b> <%= @proper.age %>年</li>
  <li><b>備考</b> <%= @proper.remark %></li>
</ul>

<hr>

<% i = 1 %>
<% @stations.each do |station| %>
  <h3>最寄り駅<%= i %></h3>
  <ul>
    <li><b>路線名</b> <%= station.line_name %></li>
    <li><b>駅名</b> <%= station.station_name %></li>
    <li><b>徒歩分数</b> <%= station.minute_walk %>分</li>
    <% i += 1 %>
  </ul>
<% end %>
 
<%= link_to '編集', edit_proper_path(@proper) %> |
